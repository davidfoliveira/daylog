<html>
	<head>
<& comps/headers.jst &>
		<title>Daylog…π / Home</title>
	</head>
	<body data-user="<%= args.user %>"<%= (args.viewUser != args.user) ? 'class="locked"' : '' %>>

<& comps/menu.jst args &>

		<div class="ink-grid">

<& comps/header.jst args &>

			<div class="ink-form">
				<div class="control-group column-group no-margin">
					<div class="control large-20 xlarge-20 small-100">
						<input type="text" id="dayPicker" class="ink-datepicker" value="<%= args.date | h %>" data-prev="<%= args.date | h %>"/>
					</div>
					<div class="control large-60 xlarge-60 hide-small"></div>
				</div>

				<div class="mainpane column-group horizontal-gutters">

					<div class="midpane large-80 xlarge-80 small-100">

						<div class="timechartPH midpane large-100 xlarge-100 small-100">
							<div id="timechart" class="timechart"></div>
						</div>

						<div class="log">
							<table class="ink-table">
								<thead>
									<tr>
										<th class="project">Project</th>
										<th class="time">Time</th>
										<th class="toold"></th>
									</tr>
								</thead>
								<tbody>
% args.todaysLog.forEach(function(row) {
									<tr>
										<td class="project" title="<% row.Notes | h %>" data-notes="<%= row.Notes | h %>"><%= row.Task | h %></td>
										<td class="time"><%= row.Time | h %></td>
										<td class="tools"><button class="del fa fa-trash-o"></button></td>
									</tr>
% });
								</tbody>
							</table>
						</div>
						<div class="totals">
							<table class="ink-table">
								<tr>
									<td class="project"></td>
									<td class="time"><% args._total | h %></td>
									<td class="tools"></td>
								</tr>
							</table>
						</div>
						<div class="button-group">
							<button id="newevent" class="ink-button blue">+</button>
							<button id="newtxtevents" class="ink-button blue">+ .txt</button>
							<button id="save" class="ink-button green">Save</button>
						</div>
					</div>
					<div class="large-20 xlarge-20 small-100">
						<div class="projects">
							<h4>Projects</h4>
							<ul>
% args.projects.forEach(function(project){
								<li><a href="#"><%= project | h %></a></li>
% });
							</ul>
						</div>
					</div>
				</div>
			</div>

		</div>

<& comps/modal.jst &>

		<script type="text/javascript" src="/assets/js/ztimechart.js?3"></script>
		<script type="text/javascript" src="/assets/js/main.js?3"></script>

	</body>
</html>
